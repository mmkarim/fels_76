<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @word] do |f| %>
      <%= render "shared/errors", target: f.object %>
      <%= f.select :category_id, options_from_collection_for_select(@categories, "id", "title") %>

      <%= f.label :content, t("word_content") %>
      <%= f.text_field :content, class: "form-control" %>

      <%= f.label :pronunciation, t("pronunciation") %>
      <%= f.text_field :pronunciation, class: "form-control" %>

      <div id="choices_list">
        <%= f.fields_for :choices do |choice_builder| %>
          <%= render "choice_fields", f: choice_builder %>
        <% end %>
      </div>

      <p><%= link_to_add_fields t("add_choice"), f, :choices %></p>

      <%= f.submit t("submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
