<% provide :title, t("users_all") %>
<h1><%= t "users_all" %></h1>
<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to t("delete"), user, method: :delete,
        data: {confirm: t("confirm")} %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>
